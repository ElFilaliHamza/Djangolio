# whene it finds the .editorconfig file will consider it as the root folder
root = true

[*.{html,py}] # apply these editor settings on html and python files
charset = utf-8
indent_size = 8
indent_style = space
max_line_length = 120
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
